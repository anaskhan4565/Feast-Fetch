@page
@model FeaturesModel
@{
    ViewData["Title"] = "Features";
}

<div class="page-header bg-gradient text-white py-5">
    <div class="container">
        <h1 class="display-4 fw-bold">
            <i class="bi bi-star me-3"></i>Amazing Features
        </h1>
        <p class="lead">Discover what makes Feast Fetch extraordinary</p>
    </div>
</div>

<div class="container py-5">
    <!-- Feature Highlights -->
    <div class="row g-4 mb-5">
        <div class="col-lg-12 text-center mb-4">
            <h2 class="display-5 fw-bold mb-3">Why Choose Feast Fetch?</h2>
            <p class="lead text-muted">A complete restaurant ordering solution powered by Microsoft Azure</p>
        </div>
        
        <!-- Feature Cards Grid -->
        <div class="col-lg-4 col-md-6">
            <div class="card h-100">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-4">
                        <i class="bi bi-lightning-charge display-1" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
                    </div>
                    <h3 class="h4 fw-bold mb-3">Lightning Fast</h3>
                    <p class="text-muted">Optimized performance with Azure CDN and Redis caching ensures instant page loads and smooth user experience.</p>
                    <div class="mt-3">
                        <span class="badge bg-primary">CDN</span>
                        <span class="badge bg-success">Redis Cache</span>
                        <span class="badge bg-info">Optimized</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card h-100">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-4">
                        <i class="bi bi-shield-check display-1" style="background: linear-gradient(135deg, #0ba360 0%, #3cba92 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
                    </div>
                    <h3 class="h4 fw-bold mb-3">Bank-Grade Security</h3>
                    <p class="text-muted">Enterprise-level security with Azure AD, SSL encryption, and PCI-DSS compliant payment processing.</p>
                    <div class="mt-3">
                        <span class="badge bg-success">Azure AD</span>
                        <span class="badge bg-warning text-dark">SSL/TLS</span>
                        <span class="badge bg-danger">PCI-DSS</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card h-100">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-4">
                        <i class="bi bi-graph-up-arrow display-1" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
                    </div>
                    <h3 class="h4 fw-bold mb-3">Auto Scaling</h3>
                    <p class="text-muted">Automatically scales to handle traffic spikes during peak hours without manual intervention or downtime.</p>
                    <div class="mt-3">
                        <span class="badge bg-info">Auto Scale</span>
                        <span class="badge bg-primary">High Load</span>
                        <span class="badge bg-secondary">99.95% SLA</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card h-100">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-4">
                        <i class="bi bi-phone display-1" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
                    </div>
                    <h3 class="h4 fw-bold mb-3">Fully Responsive</h3>
                    <p class="text-muted">Beautiful, modern UI that works seamlessly across all devices - mobile, tablet, and desktop.</p>
                    <div class="mt-3">
                        <span class="badge bg-warning text-dark">Mobile First</span>
                        <span class="badge bg-info">PWA Ready</span>
                        <span class="badge bg-success">Adaptive</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card h-100">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-4">
                        <i class="bi bi-geo-alt-fill display-1" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
                    </div>
                    <h3 class="h4 fw-bold mb-3">Real-Time Tracking</h3>
                    <p class="text-muted">Track your order in real-time from kitchen to doorstep with live GPS tracking and notifications.</p>
                    <div class="mt-3">
                        <span class="badge bg-danger">Live GPS</span>
                        <span class="badge bg-primary">Real-Time</span>
                        <span class="badge bg-success">Notifications</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6">
            <div class="card h-100">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-4">
                        <i class="bi bi-robot display-1" style="background: linear-gradient(135deg, #2e1065 0%, #4c1d95 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
                    </div>
                    <h3 class="h4 fw-bold mb-3">AI Recommendations</h3>
                    <p class="text-muted">Intelligent food recommendations based on your preferences, order history, and trending items.</p>
                    <div class="mt-3">
                        <span class="badge bg-secondary">Machine Learning</span>
                        <span class="badge bg-info">Smart</span>
                        <span class="badge bg-primary">Personalized</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Customer Experience Section -->
    <div class="row g-4 mb-5">
        <div class="col-lg-12 text-center mb-4">
            <h2 class="display-5 fw-bold mb-3">Customer Experience</h2>
            <p class="lead text-muted">Everything designed with users in mind</p>
        </div>

        <div class="col-lg-6">
            <div class="card border-0 shadow-lg h-100">
                <div class="card-header bg-primary text-white">
                    <h3 class="h5 mb-0"><i class="bi bi-person-circle me-2"></i>For Customers</h3>
                </div>
                <div class="card-body p-4">
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            <strong>Easy Browsing:</strong> Intuitive menu navigation with filters and search
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            <strong>Order Customization:</strong> Customize every aspect of your meal
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            <strong>Multiple Payments:</strong> Credit card, debit card, PayPal, Apple Pay
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            <strong>Order History:</strong> Track all past orders and reorder favorites
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            <strong>Reviews & Ratings:</strong> Share your experience and help others
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            <strong>Loyalty Rewards:</strong> Earn points with every order
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card border-0 shadow-lg h-100">
                <div class="card-header bg-success text-white">
                    <h3 class="h5 mb-0"><i class="bi bi-shop me-2"></i>For Restaurants</h3>
                </div>
                <div class="card-body p-4">
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill text-primary me-2"></i>
                            <strong>Dashboard Analytics:</strong> Real-time insights into sales and performance
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill text-primary me-2"></i>
                            <strong>Menu Management:</strong> Easy to add, edit, or remove menu items
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill text-primary me-2"></i>
                            <strong>Order Management:</strong> Streamlined order processing workflow
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill text-primary me-2"></i>
                            <strong>Inventory Tracking:</strong> Automatic inventory management
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill text-primary me-2"></i>
                            <strong>Customer Insights:</strong> Understand your customers better
                        </li>
                        <li class="mb-3">
                            <i class="bi bi-check-circle-fill text-primary me-2"></i>
                            <strong>Marketing Tools:</strong> Promote specials and attract customers
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Technical Excellence -->
    <div class="row g-4 mb-5">
        <div class="col-lg-12 text-center mb-4">
            <h2 class="display-5 fw-bold mb-3">Technical Excellence</h2>
            <p class="lead text-muted">Built with cutting-edge technology</p>
        </div>

        <div class="col-lg-12">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-info text-white">
                    <h3 class="h5 mb-0"><i class="bi bi-code-slash me-2"></i>Modern Technology Stack</h3>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-3 col-sm-6">
                            <div class="text-center p-3 border rounded">
                                <i class="bi bi-filetype-cs display-4 text-primary mb-2"></i>
                                <h5 class="fw-bold">ASP.NET Core 8.0</h5>
                                <p class="small text-muted mb-0">Latest .NET LTS with high performance</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <div class="text-center p-3 border rounded">
                                <i class="bi bi-microsoft display-4 text-info mb-2"></i>
                                <h5 class="fw-bold">Microsoft Azure</h5>
                                <p class="small text-muted mb-0">Cloud-native with global reach</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <div class="text-center p-3 border rounded">
                                <i class="bi bi-database display-4 text-success mb-2"></i>
                                <h5 class="fw-bold">Azure SQL</h5>
                                <p class="small text-muted mb-0">Managed relational database</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <div class="text-center p-3 border rounded">
                                <i class="bi bi-bootstrap display-4 text-purple mb-2"></i>
                                <h5 class="fw-bold">Bootstrap 5</h5>
                                <p class="small text-muted mb-0">Modern responsive framework</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Performance Metrics -->
    <div class="row g-4">
        <div class="col-lg-12 text-center mb-4">
            <h2 class="display-5 fw-bold mb-3">Performance Metrics</h2>
            <p class="lead text-muted">Numbers that matter</p>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card text-center border-0 shadow-lg h-100">
                <div class="card-body p-4">
                    <i class="bi bi-speedometer2 display-1 text-primary mb-3"></i>
                    <h3 class="display-4 fw-bold text-primary">99.95%</h3>
                    <p class="text-muted mb-0">Uptime SLA</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card text-center border-0 shadow-lg h-100">
                <div class="card-body p-4">
                    <i class="bi bi-clock display-1 text-success mb-3"></i>
                    <h3 class="display-4 fw-bold text-success">&lt;100ms</h3>
                    <p class="text-muted mb-0">Average Response Time</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card text-center border-0 shadow-lg h-100">
                <div class="card-body p-4">
                    <i class="bi bi-arrow-up-right display-1 text-info mb-3"></i>
                    <h3 class="display-4 fw-bold text-info">Auto</h3>
                    <p class="text-muted mb-0">Scaling Capability</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card text-center border-0 shadow-lg h-100">
                <div class="card-body p-4">
                    <i class="bi bi-globe display-1 text-danger mb-3"></i>
                    <h3 class="display-4 fw-bold text-danger">Global</h3>
                    <p class="text-muted mb-0">CDN Distribution</p>
                </div>
            </div>
        </div>
    </div>
</div>

