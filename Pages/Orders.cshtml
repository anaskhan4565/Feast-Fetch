@page
@model FeastFetch.Pages.OrdersModel
@{
    ViewData["Title"] = "My Orders";
}

<div class="page-header text-white text-center">
    <div class="container">
        <h1 class="display-3 fw-bold"><i class="bi bi-box-seam me-3"></i>My Orders</h1>
        <p class="lead">View your order details</p>
    </div>
</div>

<div class="container py-5">
    <!-- Track Order Section -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-primary text-white py-2">
            <h6 class="mb-0"><i class="bi bi-search me-2"></i>Track Your Order</h6>
        </div>
        <div class="card-body p-3">
            <div class="row g-2 align-items-end">
                <div class="col-md-8">
                    <label class="form-label mb-1 small">Enter Order Tracking ID</label>
                    <input type="text" class="form-control" id="trackingIdInput" placeholder="Enter tracking ID (e.g., 8, 9, 10...)">
                </div>
                <div class="col-md-4">
                    <button type="button" class="btn btn-primary w-100" id="trackOrderBtn">
                        <i class="bi bi-search me-1"></i>Track Order
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading Indicator -->
    <div id="loadingIndicator" class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading orders...</p>
    </div>

    <!-- No Orders Message -->
    <div id="noOrders" class="text-center py-5" style="display: none;">
        <i class="bi bi-inbox display-1 text-muted"></i>
        <h3 class="mt-3 text-muted">No orders found</h3>
        <p class="text-muted">You haven't placed any orders yet</p>
        <a href="/Menu" class="btn btn-primary mt-3">
            <i class="bi bi-plus-circle me-2"></i>Browse Menu
        </a>
    </div>

    <!-- Orders Container -->
    <div id="ordersContainer" class="row g-4" style="display: none;">
        <!-- Orders will be loaded here -->
    </div>
</div>

<!-- Delete Order Confirmation - Inline Alert Style -->
<div id="deleteOrderConfirm" class="position-fixed top-0 start-0 w-100 h-100" style="display: none; z-index: 9999; background: rgba(0,0,0,0.6); backdrop-filter: blur(4px);">
    <div class="d-flex align-items-center justify-content-center h-100">
        <div class="card shadow-lg border-0" style="max-width: 400px; width: 90%; border-radius: 16px; overflow: hidden;">
            <div class="card-header bg-danger text-white py-3">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Cancel Order</h5>
            </div>
            <div class="card-body p-4">
                <p class="mb-3">Are you sure you want to cancel this order?</p>
                <p class="mb-0"><strong>Order ID:</strong> <span id="deleteOrderId" class="text-muted"></span></p>
            </div>
            <div class="card-footer bg-white border-0 d-flex gap-2 justify-content-end p-3">
                <button type="button" class="btn btn-secondary" id="cancelDeleteBtn">
                    <i class="bi bi-x me-1"></i>No, Keep
                </button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="bi bi-trash me-1"></i>Yes, Cancel Order
                </button>
            </div>
        </div>
    </div>
</div>

<script>
(function() {
    const API_BASE_URL = 'https://feastfetchfunctionappk224626-fjfadrgzcgfwcqev.centralindia-01.azurewebsites.net/api';
    
    let orderToDelete = null;
    
    // Show/hide the confirmation dialog
    function showDeleteConfirm(show) {
        const dialog = document.getElementById('deleteOrderConfirm');
        if (show) {
            dialog.style.display = 'block';
            document.body.style.overflow = 'hidden';
        } else {
            dialog.style.display = 'none';
            document.body.style.overflow = '';
        }
    }
    
    // Load orders from localStorage and fetch details from API
    async function loadOrders() {
        const loadingIndicator = document.getElementById('loadingIndicator');
        const noOrders = document.getElementById('noOrders');
        const ordersContainer = document.getElementById('ordersContainer');
        
        // Get stored orders (with secrets)
        const storedOrders = JSON.parse(localStorage.getItem('orders') || '[]');
        console.log('Stored orders:', storedOrders);
        
        if (!storedOrders || storedOrders.length === 0) {
            loadingIndicator.style.display = 'none';
            noOrders.style.display = 'block';
            ordersContainer.style.display = 'none';
            return;
        }
        
        // Fetch details for each order from API
        const orderDetailsPromises = storedOrders.map(async (storedOrder) => {
            try {
                const secret = storedOrder.orderSecret;
                if (!secret) {
                    console.log('No secret for order:', storedOrder);
                    return null;
                }
                
                console.log('Fetching order with secret:', secret);
                const response = await fetch(`${API_BASE_URL}/order?secret=${encodeURIComponent(secret)}`);
                
                if (!response.ok) {
                    console.error('Failed to fetch order:', response.status);
                    return null;
                }
                
                const result = await response.json();
                console.log('Order API response:', result);
                
                if (result.success && result.order) {
                    return {
                        ...result.order,
                        orderSecret: secret // Keep the secret for delete
                    };
                }
                return null;
            } catch (error) {
                console.error('Error fetching order:', error);
                return null;
            }
        });
        
        const orders = (await Promise.all(orderDetailsPromises)).filter(o => o !== null);
        console.log('Fetched orders:', orders);
        
        loadingIndicator.style.display = 'none';
        
        if (orders.length === 0) {
            noOrders.style.display = 'block';
            ordersContainer.style.display = 'none';
            return;
        }
        
        // Render orders
        ordersContainer.style.display = 'flex';
        noOrders.style.display = 'none';
        ordersContainer.innerHTML = orders.map(order => renderOrderCard(order)).join('');
    }
    
    function renderOrderCard(order) {
        const statusColor = order.status === 'delivered' || order.status === 'completed' ? 'success' : 
                           order.status === 'cancelled' ? 'danger' : 'warning';
        
        // Render items
        let itemsHtml = '';
        let itemsTotal = 0;
        
        if (order.items && order.items.length > 0) {
            itemsHtml = order.items.map(item => {
                const price = parseFloat(item.price) || 0;
                const qty = parseInt(item.quantity) || 1;
                const itemTotal = price * qty;
                itemsTotal += itemTotal;
                
                return `
                    <div class="d-flex align-items-center py-2 border-bottom">
                        ${item.imageUrl ? 
                            `<img src="${item.imageUrl}" alt="${item.name || 'Item'}" class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;">` : 
                            `<div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;"><i class="bi bi-image text-muted"></i></div>`
                        }
                        <div class="flex-grow-1">
                            <strong>${item.name || 'Item'}</strong>
                            ${item.description ? `<p class="mb-0 text-muted small">${item.description}</p>` : ''}
                            <small class="text-muted">Qty: ${qty} Ã— $${price.toFixed(2)}</small>
                        </div>
                        <strong>$${itemTotal.toFixed(2)}</strong>
                    </div>
                `;
            }).join('');
        }
        
        return `
            <div class="col-lg-6">
                <div class="card shadow-lg border-0 h-100">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">Order #${order.id.substring(0, 8)}</h5>
                            <small>${new Date(order.createdAt).toLocaleString()}</small>
                        </div>
                        <span class="badge bg-${statusColor} fs-6">${order.status}</span>
                    </div>
                    <div class="card-body">
                        <!-- Tracking ID -->
                        ${order.orderSecret ? `
                            <div class="mb-3">
                                <p class="text-muted mb-2"><i class="bi bi-hash me-2"></i>Tracking ID: <span class="mb-0 fs-6 fw-bold text-primary">${order.orderSecret}</span> </p>
                            </div>
                        ` : ''}
                        
                        <!-- Customer Info -->
                        <div class="mb-3">
                            <h6 class="text-muted"><i class="bi bi-person me-2"></i>Customer</h6>
                            <p class="mb-0"><strong>${order.customer.name}</strong></p>
                            <p class="mb-0 text-muted">${order.customer.phone}</p>
                        </div>

                        <div class="mb-3">
                            <h6 class="text-muted"><i class="bi bi-person me-2"></i>Delivery Address</h6>
                            <p class="mb-0"><strong>${order.deliveryAddress}</strong></p>
                        </div>
                        
                        <!-- Items -->
                        <div class="mb-3">
                            <h6 class="text-muted"><i class="bi bi-bag me-2"></i>Items</h6>
                            ${itemsHtml || '<p class="text-muted">No items</p>'}
                        </div>
                        
                        <!-- Total -->
                        <div class="d-flex justify-content-between align-items-center pt-2 border-top">
                            <strong>Total</strong>
                            <strong class="fs-5 text-primary">$${itemsTotal.toFixed(2)}</strong>
                        </div>
                        
                        ${order.notes ? `
                            <div class="mt-3 p-2 bg-light rounded">
                                <small class="text-muted"><i class="bi bi-sticky me-1"></i>Notes: ${order.notes}</small>
                            </div>
                        ` : ''}
                    </div>
                    ${order.status.toLowerCase() === 'pending' ? `
                        <div class="card-footer bg-white border-0">
                            <button class="btn btn-outline-danger w-100" onclick="confirmDeleteOrder('${order.id}', '${order.orderSecret}')">
                                <i class="bi bi-x-circle me-1"></i>Cancel Order
                            </button>
                        </div>
                    ` : ''}
                </div>
            </div>
        `;
    }
    
    // Confirm delete
    window.confirmDeleteOrder = function(orderId, orderSecret) {
        orderToDelete = { orderId, orderSecret };
        document.getElementById('deleteOrderId').textContent = orderId.substring(0, 8) + '...';
        showDeleteConfirm(true);
    };
    
    // Delete order
    async function deleteOrder() {
        if (!orderToDelete) return;
        
        const { orderId, orderSecret } = orderToDelete;
        const btn = document.getElementById('confirmDeleteBtn');
        const originalText = btn.innerHTML;
        
        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Cancelling...';
        
        try {
            console.log('Deleting order:', orderId, 'with secret:', orderSecret);
            
            const response = await fetch(`${API_BASE_URL}/order/${orderId}`, {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ secret: orderSecret })
            });
            
            console.log('Delete response:', response.status);
            
            if (!response.ok) {
                throw new Error('Failed to delete order');
            }
            
            const result = await response.json();
            console.log('Delete result:', result);
            
            if (result.success) {
                // Remove from localStorage
                const storedOrders = JSON.parse(localStorage.getItem('orders') || '[]');
                const updatedOrders = storedOrders.filter(o => o.orderId !== orderId && o.orderSecret !== orderSecret);
                localStorage.setItem('orders', JSON.stringify(updatedOrders));
                
                // Close dialog
                showDeleteConfirm(false);
                
                // Reload orders
                loadOrders();
            }
        } catch (error) {
            console.error('Error deleting order:', error);
            alert('Failed to cancel order: ' + error.message);
        } finally {
            btn.disabled = false;
            btn.innerHTML = originalText;
            orderToDelete = null;
        }
    }
    
    // Track order by tracking ID
    async function trackOrderByTrackingId() {
        const trackingInput = document.getElementById('trackingIdInput');
        const trackingId = trackingInput.value.trim();
        
        if (!trackingId) {
            alert('Please enter a tracking ID');
            trackingInput.focus();
            return;
        }
        
        const btn = document.getElementById('trackOrderBtn');
        const originalText = btn.innerHTML;
        
        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Tracking...';
        
        try {
            console.log('Tracking order with ID:', trackingId);
            
            const response = await fetch(`${API_BASE_URL}/order?secret=${encodeURIComponent(trackingId)}`);
            
            if (!response.ok) {
                throw new Error('Order not found');
            }
            
            const result = await response.json();
            console.log('Track order result:', result);
            
            if (result.success && result.order) {
                // Check if order already exists in localStorage
                const storedOrders = JSON.parse(localStorage.getItem('orders') || '[]');
                const existingOrder = storedOrders.find(o => o.orderSecret === trackingId);
                
                if (!existingOrder) {
                    // Calculate total from items
                    let total = 0;
                    if (result.order.items && result.order.items.length > 0) {
                        total = result.order.items.reduce((sum, item) => {
                            const price = parseFloat(item.price) || 0;
                            const qty = parseInt(item.quantity) || 1;
                            return sum + (price * qty);
                        }, 0);
                    }
                    
                    // Add new order to localStorage
                    storedOrders.push({
                        orderId: result.order.id,
                        orderSecret: trackingId,
                        customerName: result.order.customer.name,
                        customerPhone: result.order.customer.phone,
                        createdAt: result.order.createdAt,
                        status: result.order.status,
                        deliveryAddress: result.order.deliveryAddress || '',
                        total: '$' + total.toFixed(2)
                    });
                    localStorage.setItem('orders', JSON.stringify(storedOrders));
                    
                    alert('Order found and added to your orders!');
                } else {
                    alert('This order is already in your orders list!');
                }
                
                // Clear input and reload orders
                trackingInput.value = '';
                loadOrders();
            } else {
                throw new Error('Invalid response from server');
            }
        } catch (error) {
            console.error('Error tracking order:', error);
            alert('Order not found. Please check your tracking ID and try again.');
        } finally {
            btn.disabled = false;
            btn.innerHTML = originalText;
        }
    }
    
    // Initialize
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('confirmDeleteBtn').addEventListener('click', deleteOrder);
        document.getElementById('cancelDeleteBtn').addEventListener('click', function() {
            showDeleteConfirm(false);
            orderToDelete = null;
        });
        
        // Track order button
        document.getElementById('trackOrderBtn').addEventListener('click', trackOrderByTrackingId);
        
        // Track order on Enter key
        document.getElementById('trackingIdInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                trackOrderByTrackingId();
            }
        });
        
        // Close on backdrop click
        document.getElementById('deleteOrderConfirm').addEventListener('click', function(e) {
            if (e.target === this) {
                showDeleteConfirm(false);
                orderToDelete = null;
            }
        });
        
        // Close on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && document.getElementById('deleteOrderConfirm').style.display === 'block') {
                showDeleteConfirm(false);
                orderToDelete = null;
            }
        });
        
        loadOrders();
    });
})();
</script>
